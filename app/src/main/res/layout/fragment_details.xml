<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.details.DetailsFragment" >


    <ProgressBar
        android:id="@+id/progress_bar"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:scaleY="4"
        android:indeterminateTint="@color/colorPrimaryDark"
        android:indeterminateBehavior="repeat"
        android:indeterminate="false" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/det_photo"
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:layout_centerHorizontal="true"
                android:contentDescription="Movie Image"
                android:gravity="center" />

            <TextView
                android:id="@+id/det_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Title"
                android:textStyle="bold"
                android:gravity="center"
                android:textSize="20dp"
                android:paddingTop="10dp"
                android:textColor="@color/colorPrimaryDark"/>


            <TextView
                android:id="@+id/det_adults"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="For Adults"
                android:textStyle="bold"
                android:padding="10dp"
                android:textColor="@color/colorPrimaryDark"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/det_overview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="OverView: "
                android:padding="10dp"
                android:background="@drawable/myfild"
                android:textColor="#000000"/>
            <TextView
                android:id="@+id/det_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:paddingLeft="10dp"
                android:text="Release date: " />

            <TextView
                android:id="@+id/det_vote"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:paddingLeft="10dp"
                android:text="Vote count: " />

            <TextView
                android:id="@+id/det_rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/movie_overview"
                android:layout_margin="5dp"
                android:text="Rating: "
                android:paddingLeft="10dp"
                android:textColor="#000000"
                android:textSize="15sp"
                android:textStyle="bold" />

        </LinearLayout>



    </ScrollView>



</RelativeLayout>